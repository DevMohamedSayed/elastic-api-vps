[
  {
    "id": "deploy",
    "execute-command": "/home/mohammed/compose-stack/deploy.sh",
    "command-working-directory": "/home/mohammed/compose-stack",
    "response-message": "Deployment started",
    "trigger-rule": {
      "and": [
        {
          "match": {
            "type": "payload-hmac-sha256",
            "secret": "mohamed-deploy-secret-2026",
            "parameter": {
              "source": "header",
              "name": "X-Hub-Signature-256"
            }
          }
